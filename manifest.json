{
  "manifest_version": 3,
  "name": "Kaminari",
  "version": "0.4.0",
  "description": "Tab links copy utility",
  "icons": {
    "16": "icons/favicon.png",
    "128": "icons/128.png",
    "512": "icons/512.png"
  },
  "permissions": [
    "clipboardWrite",
    "tabs",
    "scripting",
    "storage",
    "activeTab"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+K"
      },
      "description": "Open Kaminari tab copy popup"
    },
    "copy_all_tabs": {
      "suggested_key": {
        "default": "Alt+Shift+K"
      },
      "description": "Copy all tab links"
    }
  },
  "action": {
    "default_icon": {
      "16": "icons/favicon.png",
      "128": "icons/128.png",
      "512": "icons/512.png"
    },
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "lz-string.min.js",
        "qrcode.min.js",
        "icons/*.png",
        "icons/*.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
